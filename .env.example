# Root Environment Variables Template
# Copy this to .env and fill with your actual values
# NEVER commit .env to git!

# ============================================
# API KEYS - GET FROM RESPECTIVE SERVICES
# ============================================

# OpenRouter (Qwen 3 AI Model)
OPENROUTER_API_KEY=your_openrouter_key_here

# Twelve Data (Stock Market Data - Free 800 calls/day)
TWELVE_DATA_API_KEY=your_twelve_data_key_here

# Binance (Crypto Data - Free)
# No API key needed for public WebSocket streams

# News API (Google Custom Search - Free 100/day)
GOOGLE_CUSTOM_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# ============================================
# DATABASE & STORAGE
# ============================================

# MongoDB (Connection String)
MONGODB_URI=mongodb://localhost:27017/trading_agent
# Or MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/trading_agent

# Upstash Redis (Free Cloud Redis)
UPSTASH_REDIS_URL=your_upstash_redis_url_here
UPSTASH_REDIS_TOKEN=your_upstash_token_here

# Supabase (Auth & Database)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# APPLICATION CONFIG
# ============================================

# Backend
BACKEND_URL=http://localhost:8000
BACKEND_PORT=8000
ENVIRONMENT=development

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SOCKET_URL=http://localhost:8000

# ============================================
# SECURITY
# ============================================

# JWT Secret (Generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here_min_32_chars

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_DAY=100

# ============================================
# OPTIONAL: MONITORING & LOGGING
# ============================================

# Sentry (Error Tracking - Optional)
# SENTRY_DSN=your_sentry_dsn_here

# Log Level
LOG_LEVEL=INFO
